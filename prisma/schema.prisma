// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id               Int      @id @default(autoincrement())
  sub              String   @unique
  stripeCustomerId String   @unique
  courses          Course[]
}

model Course {
  id              Int    @id @default(autoincrement())
  name            String @unique
  stripeProductId String @unique
  users           User[]
}
