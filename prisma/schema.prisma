generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Course {
  id              Int    @id @default(autoincrement())
  name            String @unique
  stripeProductId String @unique

  users UserCourses[]

  lectures Lecture[]
}

model UserCourses {
  sub String

  course          Course @relation(fields: [stripeProductId], references: [stripeProductId])
  stripeProductId String // relation scalar field (used in the `@relation` attribute above)

  @@id([sub, stripeProductId])
  @@index([stripeProductId])
  @@index([sub])
}

model Lecture {
  id   Int    @id @default(autoincrement())
  name String @unique

  Course   Course @relation(fields: [courseId], references: [id])
  courseId Int

  lectureUserInfo LectureUserInfo[]

  @@index([courseId])
}

model LectureUserInfo {
  id  Int    @id @default(autoincrement())
  sub String

  lecture   Lecture @relation(fields: [lectureId], references: [id])
  lectureId Int

  seen Boolean @default(false)

  @@unique([sub, lectureId], name: "lectureInfoIdentifier")
  @@index([sub])
  @@index([lectureId])
}
